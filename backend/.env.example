# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/moodlist
POSTGRES_CONNECTION_STRING="postgresql+asyncpg://postgres:postgres@localhost:5432/moodlist"

# JWT Settings
JWT_SECRET_KEY=changeme
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Spotify OAuth
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/auth/spotify/callback

# Optional: Redis Cache
REDIS_URL=redis://localhost:6379/0

# LLM Providers
OPENAI_API_KEY=
GROQ_API_KEY=
CEREBRAS_API_KEY=
RECCOBEAT_API_KEY=

# Logging / Monitoring
SENTRY_DSN=

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_GENERAL=100/minute
RATE_LIMIT_WORKFLOW_START=10/minute
RATE_LIMIT_WORKFLOW_POLL=60/minute
RATE_LIMIT_PLAYLIST_EDIT=30/minute
RATE_LIMIT_AUTH=20/minute

# Application
APP_ENV=development
LOG_LEVEL=INFO
FRONTEND_URL=http://localhost:3000

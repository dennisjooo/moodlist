# Backend API Configuration
NEXT_PUBLIC_BACKEND_API_URL=http://localhost:8000

# Spotify OAuth Configuration
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id
NEXT_PUBLIC_SPOTIFY_REDIRECT_URI=http://localhost:3000/callback

# Limited Access Configuration (Spotify Dev Mode)
# Set to 'false' to disable dev mode restrictions when your Spotify app is approved
NEXT_PUBLIC_SPOTIFY_DEV_MODE=true

# Set to 'false' to hide the limited access notice
NEXT_PUBLIC_SHOW_LIMITED_ACCESS_NOTICE=true

# Optional: Custom contact URL for beta access requests (e.g., email, form, Discord, etc.)
# NEXT_PUBLIC_SPOTIFY_BETA_CONTACT_URL=https://your-contact-form-url
# NEXT_PUBLIC_SPOTIFY_BETA_CONTACT_LABEL=Request Access

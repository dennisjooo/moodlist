# Backend API Configuration
NEXT_PUBLIC_BACKEND_API_URL=http://127.0.0.1:8000

# Spotify OAuth Configuration
# IMPORTANT: Use 127.0.0.1 instead of localhost (required by Spotify as of Nov 2025)
# For production, use your HTTPS domain (e.g., https://yourdomain.com/callback)
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id
NEXT_PUBLIC_SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/callback

# Limited Access Configuration (Spotify Dev Mode)
# Set to 'false' to disable dev mode restrictions when your Spotify app is approved
NEXT_PUBLIC_SPOTIFY_DEV_MODE=true

# Set to 'false' to hide the limited access notice
NEXT_PUBLIC_SHOW_LIMITED_ACCESS_NOTICE=true

# Beta access contact (email, form, Discord, etc.)
# Examples:
#   Email: mailto:your-email@example.com?subject=Beta%20Access%20Request
#   Form: https://forms.gle/your-form-id
#   Discord: https://discord.gg/your-invite
NEXT_PUBLIC_SPOTIFY_BETA_CONTACT_URL=mailto:hello@example.com?subject=MoodList%20Beta%20Access%20Request
NEXT_PUBLIC_SPOTIFY_BETA_CONTACT_LABEL=Email for Beta Access

# Social Media Links
NEXT_PUBLIC_GITHUB_URL="https://github.com/john.doe"
NEXT_PUBLIC_GITHUB_USERNAME="john.doe"
NEXT_PUBLIC_LINKEDIN_URL="https://www.linkedin.com/in/john.doe/"
NEXT_PUBLIC_LINKEDIN_USERNAME="john.doe"
